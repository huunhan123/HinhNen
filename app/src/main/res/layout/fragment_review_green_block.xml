<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragment.ReviewGreenBlockFragment">
    <ImageView

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="matrix"
        android:id="@+id/imgHinh"
        android:gravity="center"
        android:adjustViewBounds="true"
        android:visibility="visible"
        tools:srcCompat="@tools:sample/avatars"
        android:layout_centerInParent="true"
        />
    <ImageView
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:src="@drawable/preview_lock_date" />
    <ImageView
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:src="@drawable/preview_lock1"
        android:layout_gravity="bottom|center"/>
    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginBottom="20dp"
        android:src="@drawable/preview_lock2"
        android:layout_gravity="bottom|center"
        />


    <Button
        android:id="@+id/btnSetGreenBlock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="200dp"
        android:background="#55FFFFFF"
        android:text="@string/text_dathinhnen"/>
    <!--
        tools:srcCompat="@tools:sample/avatars"
    -->

</android.support.design.widget.CoordinatorLayout>
